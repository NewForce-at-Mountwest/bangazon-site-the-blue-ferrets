@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Product
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.OrderProducts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => product.Product.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Product.Price)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        <td>
            Total: @Model.OrderProducts.Sum(i => i.Product.Price)
        </td>
            
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
